<!DOCTYPE html>

<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

<html>
<head>

 	<!-- jquery -->
    <script src="jquery-2.1.4.min.js"></script>

	<!-- angular -->
	<script src="angular.min.js"></script>

	<!-- angular-route -->
    <script src="angular-route.min.js"></script>

    <!-- angular-slider -->


   <!-- sweet alert -->
	<script src="/sweetalert.min.js"></script> 
	<link rel="stylesheet" type="text/css" href="./sweetalert.css">

	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

	<link rel="stylesheet" href="/app.css">

   <!-- google maps API -->
   <script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyCORDb-KW_Im-kDVydg-JHv8ikamWkFIMw">
   </script>

	<!-- express static use -->
	<script src='/app.js'></script> 

</head>
<body ng-app='app' ng-controller='ApplicationCtrl'>

	<!-- navigation bar -->
	<nav class='navbar navbar-inverse navbar-noround navbar-scale' role='navigation'>
		<div class='container'>
   			<div class="navbar-header">
	   			<button type="button" class="navbar-toggle navbar-scale" ng-click="navCollapsed = !navCollapsed">
	   				<span class='sr-only'>Toggle navigation</span>
	   				<span class='icon-bar'></span>
	   				<span class='icon-bar'></span>
	   				<span class='icon-bar'></span>
	   			</button>
	            <a class="navbar-brand" id="google" href="/#/">Talkipia</a>
			</div>
			<!-- 
				*To collapse correctly, we need ng-class/ng-click/ng-init*
				http://stackoverflow.com/questions/16268606/responsive-dropdown-navbar-with-angular-ui-bootstrap-done-in-the-correct-angula 
			-->
			<div ng-class="{'in':!navCollapsed}" class="navbar-collapse collapse" collapse="navCollapsed">
				<ul class='nav navbar-nav'  id='google'>
					<li ng-if='!currentUser'>
	                  	<a ng-href="/#/aboutus" ng-click="collapse()">
	                  		About Us
	                  	</a>
	                </li>
				</ul>
				<!-- let's distract user by hiding username like hiding clock at casino!
				<p ng-if='currentUser' class="navbar-text navbar-right" id='google'>
	               Signed in as {{currentUser.userName}}
	       		</p>
	       		-->
			</div>
		</div>
	</nav>

	<!-- global map -->
	<div> <!-- this is for multiple page setup later <div ng-if='currentPageId == pageId.post'>-->
		<input id="pac-input" class="controls" type="text" placeholder="Search Location">

      	<button ng-click= 'moveToCurrentLocation()' class="btn btn-info" id='btn-curr'> Me </button>

      	<form ng-controller='PostsCtrl' name='postForm' novalidate>
      		<input  type='text' 
      				ng-model='content' 
      				ng-focus='moveToPostLocation()'
      				maxlength='20' 
      				id='posting' 
      				placeholder='what will happen today?' required>
      		<button ng-disabled='postForm.$invalid' 
      				ng-click='addPost()' 
      				class="btn btn-danger btn-lg btn-block" 
      				id='btn-submit'> Post </button>
      	</form>

		<div app-map=""></div>
	</div>

	<!-- pages ngview temp filter for iPhone-->
	<!-- <div ng-show='!isMobile()' ng-view></div> -->

</body>
</html>

