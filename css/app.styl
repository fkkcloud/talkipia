/* overriding original ng-hide to layout google maps UI position 
    original ng-hide will push the position to -9999, -9999 and this is
    making problem with google maps' BOTTOM_CENTER element place.
*/
#map-time-slider.ng-hide{
  /* this is just another form of hiding an element */
  display: inline!important;
  position: static;
  opacity: 0;
}

#map-time-slider.ng-hide-add, #map-time-slider.ng-hide-remove {
  -ms-transition: 0.5s linear all;
  -webkit-transition: 0.5s linear all;
  -moz-transition: 0.5s linear all;
  -o-transition: 0.5s linear all;
  transition: 0.5s linear all;
}
#map-time-slider.ng-hide-add { opacity:1; }
#map-time-slider.ng-hide-add.ng-hide-add-active { opacity:0; }
#map-time-slider.ng-hide-remove { opacity:0; }
#map-time-slider.ng-hide-remove.ng-hide-remove-active { opacity:1; }

